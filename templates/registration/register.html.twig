{% extends 'base.html.twig' %}

{% block title %}Inscription | {{ parent() }}{% endblock %}

{% block body %}
    <header>
        <h2 class="h1 mb-4">S'inscrire</h2>
        <p>Pour utiliser ce service, vous devez accepter les <a href="{{ path('app_terms') }}">conditions d'utilisation</a>.</p>
    </header>

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <p class="text-center">Déjà un compte ? <a href="{{ path('login') }}">Connectez-vous</a> vite !</p>
        <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(registrationForm) }}
{% endblock %}

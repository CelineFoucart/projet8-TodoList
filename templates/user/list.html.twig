{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs | Administration{% endblock %}

{% block body %}
    <header class="row">
        <div class="col-9">
            <h2 class="h1 mb-4">Liste des utilisateurs</h2>
        </div>
        <div class="col-3 text-end">
            <a class="btn btn-primary btn-sm" href="{{ path('user_create') }}">Ajouter</a>
        </div>
    </header>


    {% if users|length == 0 %}
        <div class="alert alert-warning" role="alert">
            Il n'y a pas encore d'utilisateur enregistré.
        </div>
    {% else %}
        <div class="row">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Nom d'utilisateur</th>
                    <th>Email</th>
                    <th>Vérifié ?</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
                        <td>
                            <a href="{{ path('user_edit', {'id' : user.id}) }}" class="btn btn-success btn-sm">Editer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Ajouter une tâche | {{ parent() }}{% endblock %}

{% block body %}
    <header>
        <h2 class="h1 mb-4">Créer une tâche</h2>
    </header>

    <div class="row">
        {{ form_start(form, {'action' : path('task_create')}) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-success pull-right">Ajouter</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
